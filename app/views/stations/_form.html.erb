<%= form_for(@station) do |f| %>
  <% if @station.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@station.errors.count, "error") %> prohibited this station from being saved:</h2>

      <ul>
      <% @station.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :lat %><br>
    <%= f.text_field :lan %>
  </div>
  <div class="field">
    <%= f.label :lon %><br>
    <%= f.text_field :lon %>
  </div>
  <div class="field">
    <%= f.label :numOfConnections %><br>
    <%= f.number_field :numOfConnections %>
  </div>
  <div class="field" style="width:300px" >
    <%= f.label :iconID %><br>
    <%# f.number_field :iconID %>
    
    <%= f.select(:iconID)   do %>
  		<% Icon.all.each do |c| -%>
    		<option value="<%=c.id%>" data-image="<%=c.url%>" <%= 'selected' if c.id==@station.iconID %>><img src="<%= c.icon.url %>" width="16" height="16"  \><%="#{c.id}-#{c.altText}"%></option>
  		<% end %>
	<% end %>
    
    
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
