<h1>Listing stations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lat</th>
      <th>Lon</th>
      <th>Numofconnections</th>
      <th>Iconid</th>
      <th>Icon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.name %></td>
        <td><%= station.lan %></td>
        <td><%= station.lon %></td>
        <td><%= station.numOfConnections %></td>
        <td><%= station.iconID %></td>
        <td><img src="<%= Icon.find(station.iconID).icon.url %>" width="16" height="16"  \></td>
        <td><%= link_to 'Show', station %></td>
        <td><%= link_to 'Edit', edit_station_path(station) %></td>
        <td><%= link_to 'Destroy', station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

