<h1>Listing devices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ip addr</th>
      <th>Login</th>
      <th>Pass</th>
      <th>Nextid</th>
      <th>Previd</th>
      <th>DeviceTypeID </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.name %></td>
        <td><%= device.ip_addr %></td>
        <td><%= device.login %></td>
        <td><%= device.pass %></td>
        <td><%= device.nextID %></td>
        <td><%= device.prevID %></td>
        <td><%= device.deviceTypeID  %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

